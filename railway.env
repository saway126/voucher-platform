# Railway 배포용 환경변수
NODE_ENV=production
PORT=3000
JWT_SECRET=voucher-platform-production-secret-key-2024
DATABASE_URL=sqlite:./database/voucher_platform.db

# CORS 설정
CORS_ORIGIN=https://your-app-name.railway.app

